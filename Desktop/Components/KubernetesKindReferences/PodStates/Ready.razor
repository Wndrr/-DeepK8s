@using k8s.Models
@using System.Xml

@if (ContainerStatus.Ready)
{
    <i class="fa fa-heartbeat text-success" title="Container is ready"></i>
}
else
{
    <i class="fa fa-heartbeat text-danger" title="Container is NOT ready"></i>
}

@code
{
    [Parameter]
    public V1ContainerStatus ContainerStatus { get; set; }

}