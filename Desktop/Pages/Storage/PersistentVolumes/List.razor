@page "/PersistentVolumes"
@using k8s
@using k8s.Models
@inherits Desktop.Components.Bases.NamespacedListAutoRefresh<Desktop.Services.StateContainers.PersistentVolumeStateContainer, V1PersistentVolume, V1PersistentVolumeList>

<h1>
    Volumes
</h1>

<EntityListDisplay Entities="Entities">
    <Header>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Creation date & uptime
                </th>
                <th>
                    Actions
                </th>
            </tr>
    </Header>
    <Body>
            @if (Entities == null)
            {
                <Loading/>
            }
            else
            {
                @foreach (var (_, entity) in Entities.OrderBy(s => s.Value.Metadata.Name))
                {
                    <tr>
                        <td>
                            <NamespaceReference>
                                @entity.Metadata.Namespace()
                            </NamespaceReference>
                            <br/>
                            <PersistentVolumeReference entity="@entity">
                                @entity.Metadata.Name
                            </PersistentVolumeReference>
                        </td>
                        <td>
                            @if (entity.Metadata.CreationTimestamp.HasValue)
                            {
                                var creationTimestamp = entity.Metadata.CreationTimestamp.Value.ToUniversalTime();
                                <CreationDateDisplay BaseUtcDateTime="@creationTimestamp"/>
                                <Uptime BaseUtcDateTime="@creationTimestamp"/>

                            }
                        </td>
                        <td>
                            <TerminateEntity Entity="@entity"/>
                        </td>
                    </tr>
                }
            }
    </Body>
</EntityListDisplay>


