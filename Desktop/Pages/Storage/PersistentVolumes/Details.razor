@page "/PersistentVolume/{RequestedEntityName}"
@using k8s
@using k8s.Models
@using Desktop.Services.StateContainers
@inherits LiveDetails<V1PersistentVolumeList, V1PersistentVolume>
@inject PersistentVolumeClaimStateContainer PersistentVolumeClaimStateContainer

<EntityDetailsView Entity="@State.LastValue">
    <Status>
        <div>
            @State.LastValue.Status.Phase via <PersistentVolumeClaimReference Entity="pvc">@pvc.Metadata.Name</PersistentVolumeClaimReference>
        </div>
        <div>@State.LastValue.Status.Reason</div>
        <div>@State.LastValue.Status.Message</div>
    </Status>
    <Specifications>
        <BSRow class="my-2">
            <BSCol>
                <BSCard CardType="CardType.Card">
                    <BSCard CardType="CardType.Body">
                        <BSCard CardType="CardType.Title">
                            Misc
                        </BSCard>
                        <BSCard CardType="CardType.Text">
                            <BSRow>
                                <BSCol>
                                    <div>
                                        Access modes :
                                        @foreach (var accessMode in State.LastValue.Spec.AccessModes ?? new List<string>())
                                        {
                                            <div>@accessMode</div>
                                        }
                                    </div>
                                    <div>
                                        Capacity :
                                        @foreach (var capacity in State.LastValue.Spec.Capacity ?? new Dictionary<string, ResourceQuantity>())
                                        {
                                            <div>@capacity.Key: @capacity.Value</div>
                                        }
                                    </div>
                                    <div>
                                        Reclaim policy : <code>@State.LastValue.Spec.PersistentVolumeReclaimPolicy</code>
                                    </div>
                                    <div>
                                        StorageClassName : <code>@State.LastValue.Spec.StorageClassName</code>
                                    </div>
                                    <div>
                                        VolumeMode : <code>@State.LastValue.Spec.VolumeMode</code>
                                    </div>
                                    <div>
                                        ClaimReference : <PersistentVolumeClaimReference Entity="pvc">@pvc.Metadata.Name</PersistentVolumeClaimReference>
                                    </div>
                                </BSCol>
                            </BSRow>
                        </BSCard>
                    </BSCard>
                </BSCard>
            </BSCol>
        </BSRow>
    </Specifications>
</EntityDetailsView>

@code
{
    private V1PersistentVolumeClaim pvc => PersistentVolumeClaimStateContainer.Items
        .SingleOrDefault(
            claim => claim.Value.Metadata.Namespace() == State.LastValue.Spec.ClaimRef.NamespaceProperty
                   && claim.Value.Metadata.Name == State.LastValue.Spec.ClaimRef.Name).Value;

    protected override void OnInitialized()
    {
        ParentPageName = "PersistentVolumes";
        base.OnInitialized();
    }
}