@page "/{RequestedEntityNamespace}/Challenge/{RequestedEntityName}"
@inherits Desktop.Components.Bases.Fusion.LiveDetails<ChallengeList, Challenge>

<EntityDetailsView Entity="@State.LastValue">
    <Status>
        <BSRow class="my-2">
            <BSCol>
                <BSCard CardType="CardType.Card">
                    <BSCard CardType="CardType.Body">
                        <BSCard CardType="CardType.Title">
                            General
                        </BSCard>
                        <BSCard CardType="CardType.Text">
                            <BSRow>
                                <BSCol>
                                    State : <code>@State.LastValue.Status.State</code><br>
                                    Reason : <code>@State.LastValue.Status.Reason</code><br>
                                    Processing : <code>@State.LastValue.Status.Processing</code><br>
                                    Presented : <code>@State.LastValue.Status.Presented</code><br>
                                </BSCol>
                            </BSRow>
                        </BSCard>
                    </BSCard>
                </BSCard>
            </BSCol>
        </BSRow>
    </Status>
    <Specifications>
        <BSRow class="my-2">
            <BSCol>
                <BSCard CardType="CardType.Card">
                    <BSCard CardType="CardType.Body">
                        <BSCard CardType="CardType.Title">
                            DNS Names
                        </BSCard>
                        <BSCard CardType="CardType.Text">
                            <BSRow>
                                <BSCol>
                                    Issuer: <IssuerReference>@State.LastValue.Spec.IssuerRef.Kind/@State.LastValue.Spec.IssuerRef.Name</IssuerReference> <br>
                                    
                                    Key: <code>@State.LastValue.Spec.Key</code><br>
                                    Token: <code>@State.LastValue.Spec.Token</code><br>
                                    Type: <code>@State.LastValue.Spec.Type</code><br>
                                    Url: <code>@State.LastValue.Spec.Url</code><br>
                                    Wildcard: <code>@State.LastValue.Spec.Wildcard</code><br>
                                    AuthorizationUrl: <code>@State.LastValue.Spec.AuthorizationUrl</code><br>
                                    DnsName: <code>@State.LastValue.Spec.DnsName</code><br>
                                </BSCol>
                            </BSRow>
                        </BSCard>
                    </BSCard>
                </BSCard>
            </BSCol>
        </BSRow>
    </Specifications>
</EntityDetailsView>

@code
{
    protected override void OnInitialized()
    {
        ParentPageName = "Challenges";
        base.OnInitialized();
    }
}