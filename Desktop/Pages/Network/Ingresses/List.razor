@page "/Ingresses"
@using k8s
@using k8s.Models
@using Desktop.Services.StateContainers
@inherits Desktop.Components.Bases.NamespacedListAutoRefresh<Desktop.Services.StateContainers.IngressStateContainer, Extensionsv1beta1Ingress, Extensionsv1beta1IngressList>

<h1>
    Ingresses
</h1>
<EntityListDisplay Entities="FilteredEntities">
    <Header>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Rules
                </th>
                <th>
                    TLS Secret
                </th>
                <th>
                    Creation date & uptime
                </th>
            </tr>
    </Header>
    <Body>
            @if (FilteredEntities == null)
            {
                <Loading/>
            }
            else
            {
                @foreach (var (_, entity) in FilteredEntities.OrderBy(s => s.Value.Metadata.Name))
                {
                    <tr>
                        <td>
                            <NamespaceReference>
                                @entity.Metadata.Namespace()
                            </NamespaceReference>
                            <br/>
                            <IngressReference entity="@entity">
                                @entity.Metadata.Name
                            </IngressReference>
                        </td>
                        <td>
                           <IngressRules Entity="@entity"></IngressRules>
                        </td>
                        <td>
                            @foreach (var tls in entity.Spec?.Tls ?? new List<Extensionsv1beta1IngressTLS>())
                            {
                                <SecretReference>
                                    @tls.SecretName
                                </SecretReference>
                            }
                        </td>
                        <td>
                            @if (entity.Metadata.CreationTimestamp.HasValue)
                            {
                                var creationTimestamp = entity.Metadata.CreationTimestamp.Value.ToUniversalTime();
                                <CreationDateDisplay BaseUtcDateTime="@creationTimestamp"/>
                                <Uptime BaseUtcDateTime="@creationTimestamp"/>
                                
                            }
                        </td>
                        <td>
                            <TerminateEntity Entity="@entity"/>
                        </td>
                    </tr>
                }
            }
    </Body>
</EntityListDisplay>

